source = sys.argv[1]
name = sys.argv[2]


def send_notification(message):
    subprocess.Popen([
        "notify-send", "-i", "media-flash-symbolic", "Copy result", message
    ])


try:
    target = subprocess.check_output([
        "zenity", "--file-selection", "--directory",
        '--title=Choose a target directory',
    ]).decode("utf-8").strip()
except subprocess.CalledProcessError:
    pass
else:
    target = os.path.join(target, name)
    try:
        shutil.copytree(source, target, symlinks=True)
    except FileExistsError:
        message = "Another copy already exists\nPlease remove it first"
    except PermissionError:
        message = "A permission error occurred"
    except Exception:
        message = "An unexpected error occurred"
    else:
        message = "Successfully copied " + source + " to " + target
    send_notification(message)
